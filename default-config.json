{
  "schedule": "0 */15 * * * *",
  "providerDefaults": {
    "dropbox": {
      "token_store": "/data/.dropbox-token"
    }
  },
  "providers": [
    {
      "type": "dropbox"
    }
  ],
  "handlers": [
    {
      "extensions": ["jpg", "jpeg", "png", "gif", "webp", "heic"],
      "conversions": {
        "webp": "jpg",
        "heic": "jpg"
      },
      "target": "/media/photo"
    },
    {
      "extensions": ["mp4", "mov", "3gp"],
      "conversions": {
        "3gp": "mp4"
      },
      "target": "/media/video"
    }
  ]
}
